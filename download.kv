<DownloadBoxContainer>:
    spacing: "10dp"
    padding: "10dp"
    size_hint: 1, 1
    orientation: "vertical"
    MDBoxLayout:
        size_hint: 1, .1
        orientation: "horizontal"
        Spacer:
        MDTextField:
            size_hint: .9, 1
            mode: "rectangle"
            hint_text: "Url"
        Spacer:
        MDFloatingActionButton:
            icon: "download"
            opposite_colors: True
            elevation: 8
            md_bg_color: 30/255, 144/255, 255/255, 1
    MDBoxLayout:
        size_hint: 1, .8
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 204/255, 230/255, 255/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
    MDProgressBar:
        size_hint: 1, .1
        min: 0
        max: 100
        value: 50
        id: progress_bar