#:import Window kivy.core.window.Window

<StyleLabel@MDLabel>
    size_hint_y: None
    height: self.texture_size[1]
    theme_text_color: "Primary"

<FolderListItem>:
    text: "Unnknown Folder"
    IconLeftWidget:
        icon: "folder"

<FolderBackListItem>:
    text: f"..\\"
    IconLeftWidget:
        icon: "folder-move"

<DirDialog>:
    size_hint: .7, .7
    type: "custom"

<Content>:
    orientation: "vertical"
    size_hint_y: None
    height: "300dp"
    padding: "20dp"
    spacing: "20dp"

    path: id_full_path.text
    dirlist: id_listview
    
    ScrollView:
        scroll_type: ["content"]
        bar_width: "20dp"
        size_hint: 1, .9
        MDList:
            id: id_listview
    
    MDSeparator:

    MDBoxLayout:
        size_hint: 1, .1
        MDLabel:
            text: root.path
            id: id_full_path
            font_size: "14sp"
    
