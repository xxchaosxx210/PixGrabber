#:include app_theme.kv

<VerticalContainer@MDBoxLayout>:
    orientation: "horizontal"
    size_hint: None, None
    height: "20dp"
    width: "200dp"

<StyleLabel@MDLabel>
    size_hint_y: None
    height: self.texture_size[1]
    theme_text_color: "Primary"

<SettingsContainer>:
    orientation: "vertical"
    spacing: "10dp"

    max_connections_slider: id_max_connections
    connection_timeout_text: id_connection_timeout.text
    min_width_text: id_min_width_text.text
    min_height_text: id_min_height_text.text
    thumbs_only_check: id_thumbs_only_check
    save_path_text: id_save_path_text.text
    unique_folder_name: id_unique_name_check
    gen_filenames: id_gen_prefix_check
    gen_prefix_text: id_gen_prefix_text.text

    ScrollView:
        scroll_type: ["bars", "content"]
        bar_width: "20dp"

        MDGridLayout:
            cols: 1
            adaptive_height: True
            padding: "20dp"
            spacing: "30dp"

            MDSeparator:

            StyleLabel:
                text: "Max Connections"
            
            VerticalContainer:
                MDSlider:
                    min: 1
                    max: 30
                    id: id_max_connections
                    value: 10

            StyleLabel:
                text: "Connection Timeout"

            VerticalContainer:
                MDTextField:
                    text: root.connection_timeout_text
                    input_filter: "int"
                    id: id_connection_timeout

            MDSeparator:

            StyleLabel:
                text: "Minimum image resolution size (width, height)"

            VerticalContainer:

                MDTextField:
                    text: root.min_width_text
                    input_filter: "int"
                    id: id_min_width_text
                MDTextField:
                    text: root.min_height_text
                    input_filter: "int"
                    id: id_min_height_text

            MDSeparator:

            StyleLabel:
                text: "Thumbnail links only"

            VerticalContainer:

                MDSwitch:
                    active: True
                    id: id_thumbs_only_check
            
            MDSeparator:

            StyleLabel:
                text: "Download Folder"

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: "20dp"
                MDTextField:
                    text: root.save_path_text
                    id: id_save_path_text
                MDIconButton:
                    icon: "folder-open"

            StyleLabel:
                text: "Add a unique Folder name"
            
            VerticalContainer:

                MDSwitch:
                    active: True
                    id: id_unique_name_check
            
            MDSeparator:

            StyleLabel:
                text: "Generate Filenames (prefixed)"

            VerticalContainer:

                MDCheckbox:
                    active: True
                    id: id_gen_prefix_check
                
                MDTextField:
                    pos_hint:{"center_y": .4}
                    text: root.gen_prefix_text
                    id: id_gen_prefix_text
            
            MDSeparator:

            StyleLabel:
                text: "Use Browser cookies"

            VerticalContainer:
                MDLabel:
                    text: "Firefox"
                MDCheckbox:
                    active: True
            VerticalContainer:
                MDLabel:
                    text: "Google Chrome"
                MDCheckbox:
                    active: True
            VerticalContainer:
                MDLabel:
                    text: "Opera"
                MDCheckbox:
                    active: False
            VerticalContainer:
                MDLabel:
                    text: "Edge"
                MDCheckbox:
                    active: False
            
            MDSeparator:

            StyleLabel:
                text: "Save selected image formats"

            VerticalContainer:
                MDLabel:
                    text: "JPG"
                MDCheckbox:
                    active: True
            VerticalContainer:
                MDLabel:
                    text: "PNG"
                MDCheckbox:
                    active: True
            VerticalContainer:
                MDLabel:
                    text: "GIF"
                MDCheckbox:
                    active: True
            VerticalContainer:
                MDLabel:
                    text: "BMP"
                MDCheckbox:
                    active: True
            VerticalContainer:
                MDLabel:
                    text: "ICO"
                MDCheckbox:
                    active: True
            VerticalContainer:
                MDLabel:
                    text: "TIFF"
                MDCheckbox:
                    active: True
            VerticalContainer:
                MDLabel:
                    text: "TGA"
                MDCheckbox:
                    active: True
            
            MDSeparator:

            StyleLabel:
                text: "If file already exists in download folder..."
            
            VerticalContainer:
                MDLabel:
                    text: "Skip"
                MDCheckbox:
                    group: "file_exists"
                    active: False
            VerticalContainer:
                MDLabel:
                    text: "Overwrite"
                MDCheckbox:
                    group: "file_exists"
                    active: True
            VerticalContainer:
                MDLabel:
                    text: "Rename"
                MDCheckbox:
                    group: "file_exists"
                    active: False
